<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">
  

    <Button
        android:onClick="languageClicked"
        android:id="@+id/btnGeo"
        android:layout_width="@dimen/lanbtnwidth"
        android:layout_height="@dimen/lanbtnheight"
        android:background="@drawable/geolan"
        android:layout_marginStart="72dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="72dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/btnSpa"
        app:layout_constraintTop_toTopOf="@+id/btnSpa" />

    <Button
        android:id="@+id/btnSpa"
        android:onClick="languageClicked"
        android:layout_width="@dimen/lanbtnwidth"
        android:layout_height="@dimen/lanbtnheight"
        android:background="@drawable/spalan"
        android:layout_marginEnd="72dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="72dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:onClick="languageClicked"
        android:id="@+id/btnRus"
        android:layout_width="@dimen/lanbtnwidth"
        android:layout_height="@dimen/lanbtnheight"
        android:background="@drawable/ruslan"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSpa"
        app:layout_constraintLeft_toLeftOf="@+id/btnGeo" />

    <Button
        android:onClick="languageClicked"
        android:id="@+id/btnChi"
        android:layout_width="@dimen/lanbtnwidth"
        android:layout_height="@dimen/lanbtnheight"
        android:background="@drawable/chilan"
        app:layout_constraintRight_toRightOf="@+id/btnSpa"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSpa" />

    <Button
        android:id="@+id/btnEng"
        android:onClick="languageClicked"
        android:layout_width="@dimen/lanbtnwidth"
        android:layout_height="@dimen/lanbtnheight"
        android:background="@drawable/englan"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/btnRus"
        app:layout_constraintLeft_toLeftOf="@+id/btnRus" />

    <Button
        android:onClick="languageClicked"
        android:id="@+id/btnInD"
        android:layout_width="@dimen/lanbtnwidth"
        android:layout_height="@dimen/lanbtnheight"
        android:background="@drawable/indlan"
        app:layout_constraintRight_toRightOf="@+id/btnChi"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/btnRus" />

    <Button
        android:layout_width="@dimen/rateusbtnwidth"
        android:layout_height="@dimen/rateusbtnheight"
        android:text="Rate Us"
        android:textSize="@dimen/big_text_size"
        android:textColor="#FFF"
        android:onClick="languageClicked"
        android:background="@drawable/buttonshape"
        android:id="@+id/bRateUs"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="82dp"
        app:layout_constraintTop_toBottomOf="@+id/btnEng"
        tools:layout_constraintLeft_creator="1" />

</android.support.constraint.ConstraintLayout>