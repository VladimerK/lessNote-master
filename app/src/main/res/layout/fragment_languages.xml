<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">


    <Button
        android:onClick="languageClicked"
        android:id="@+id/btnGeo"
        android:layout_width="@dimen/lanbtnwidth"
        android:layout_height="@dimen/lanbtnheight"
        android:layout_marginTop="24dp"
        android:background="@drawable/geolan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:onClick="languageClicked"
        android:id="@+id/btnInD"
        android:layout_width="@dimen/lanbtnwidth"
        android:layout_height="@dimen/lanbtnheight"
        android:background="@drawable/indlan"
        android:layout_marginEnd="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:onClick="languageClicked"
        android:id="@+id/btnRus"
        android:layout_width="@dimen/lanbtnwidth"
        android:layout_height="@dimen/lanbtnheight"
        android:background="@drawable/ruslan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnGeo"
        app:layout_constraintVertical_bias="0.05" />
    <Button
        android:onClick="languageClicked"
        android:id="@+id/btnChi"
        android:layout_width="@dimen/lanbtnwidth"
        android:layout_height="@dimen/lanbtnheight"
        android:background="@drawable/chilan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnInD"
        app:layout_constraintVertical_bias="0.05"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btnRus"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.97" />
    <Button
        android:id="@+id/btnEng"
        android:onClick="languageClicked"
        android:layout_width="@dimen/lanbtnwidth"
        android:layout_height="@dimen/lanbtnheight"
        android:layout_marginBottom="24dp"
        android:background="@drawable/englan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnChi"
        app:layout_constraintVertical_bias="0.15"
        android:layout_marginStart="18dp"
        app:layout_constraintLeft_toRightOf="@+id/btnSpa"
        android:layout_marginLeft="18dp"
        app:layout_constraintHorizontal_bias="0.97" />

    <Button
        android:id="@+id/btnSpa"
        android:onClick="languageClicked"
        android:layout_width="@dimen/lanbtnwidth"
        android:layout_height="@dimen/lanbtnheight"
        android:layout_marginBottom="128dp"
        android:background="@drawable/spalan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnRus"
        app:layout_constraintVertical_bias="0.15"
        android:layout_marginLeft="8dp" />
    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Rate Us"
        android:textSize="17sp"
        android:textColor="#FFF"
        android:onClick="languageClicked"
        android:background="@drawable/buttonshape"
        android:id="@+id/bRateUs"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/btnEng"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

</android.support.constraint.ConstraintLayout>